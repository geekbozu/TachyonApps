# Copy this file to .env and edit values
# Global
ACCOUNT_COUNT=1
CHECK_INTERVAL=300
MAX_EMAILS_PER_LOOP=100
LOG_LEVEL=INFO
LOG_FILE=/data/logs/pop3_gmail_importer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Account 1 (replace values as needed)
ACCOUNT1_ENABLED=true
ACCOUNT1_POP3_HOST=pop.example.com
ACCOUNT1_POP3_PORT=995
ACCOUNT1_POP3_USE_SSL=true
ACCOUNT1_POP3_VERIFY_CERT=true
ACCOUNT1_POP3_USERNAME=user@example.com
ACCOUNT1_POP3_PASSWORD=your_password_here

# Gmail OAuth/Token paths â€” set absolute paths inside the container (we mount /mnt/sdcard/pop3-gmail-importer to /data)
ACCOUNT1_GMAIL_CREDENTIALS_FILE=/data/credentials.json
ACCOUNT1_GMAIL_TOKEN_FILE=/data/tokens/token_account1.json
ACCOUNT1_GMAIL_TARGET_EMAIL=your-gmail@gmail.com

# Deletion/Backup
ACCOUNT1_DELETE_AFTER_FORWARD=false
ACCOUNT1_BACKUP_ENABLED=true
ACCOUNT1_BACKUP_DIR=/data/backup/account1
ACCOUNT1_BACKUP_RETENTION_DAYS=90

